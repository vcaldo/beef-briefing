# Telegram Bot Environment Variables

# Required - Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=beef_db
DB_SSL_MODE=disable

# MinIO Configuration
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=telegram-media
MINIO_USE_SSL=false

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=info

# Import Configuration
# Comma-separated list of Telegram user IDs authorized to use /import command
ADMIN_USER_IDS=
# Maximum import file size in megabytes (default: 4096 = 4GB)
MAX_IMPORT_SIZE_MB=4096
# Number of messages to process per database transaction (default: 5000)
IMPORT_CHUNK_SIZE=5000

# Optional - New Relic (Observability)
# NEW_RELIC_LICENSE_KEY=
# NEW_RELIC_APP_NAME=beef-briefing-telegram-bot
# NEW_RELIC_ENABLED=false
